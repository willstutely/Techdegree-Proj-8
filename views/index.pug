extends layout

block content
  h1 Books 
  
  div.index
    a.button(href="/books/new") Create New Book
    include search

  table 
    thead
      tr
        th ID
        th Title 
        th Author 
        th Genre 
        th Year
        th 
    tbody
      each book in books
        tr
          td= book.id 
          td= book.title 
          td= book.author
          td= book.genre
          td= book.year
          td
            a(href="/books/" + book.id) Edit